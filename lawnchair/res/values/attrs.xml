<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Pixel -->
    <attr name="gIcon" format="reference" />
    <attr name="micIcon" format="reference" />

    <!-- Lawnchair -->
    <declare-styleable name="SubPreference">
        <attr name="content" format="reference" />
        <attr name="longClickContent" format="reference" />
        <attr name="hasPreview" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SeekbarPreference">
        <attr name="minValue" format="float" />
        <attr name="maxValue" format="float" />
        <attr name="summaryFormat" format="string" />
        <attr name="summaryMultiplier" format="integer" />
        <attr name="defaultSeekbarValue" format="float" />
        <attr name="steps" format="integer" />
    </declare-styleable>

    <declare-styleable name="ColorPickerPreference">
        <attr name="colorMode" format="integer" >
            <enum name="RGB" value="0" />
            <enum name="ARGB" value="1" />
            <enum name="HSV" value="2"/>
        </attr>
        <attr name="resolvers" value="reference"/>
    </declare-styleable>

    <declare-styleable name="PreviewPreference">
        <attr name="previewLayout" format="float" />
    </declare-styleable>

    <declare-styleable name="GesturePreference">
        <attr name="gestureClass" format="string"/>
    </declare-styleable>

    <declare-styleable name="ControlledPreference">
        <attr name="searchTitle" format="string" />
        <attr name="controllerClass" format="string" />
    </declare-styleable>

    <declare-styleable name="AdvancedPreferencesGroup">
        <attr name="topic" format="string" />
    </declare-styleable>

    <!-- Custom -->
    <attr name="bottomSheetNavBarColor" format="color" />
    <attr name="useLightSystemBars" format="boolean" />
    <attr name="settingsBackground" format="color" />
    <attr name="settingsSearchBackground" format="color" />
    <attr name="bottomSheetScrimColor" format="color" />
    <attr name="qsbEdgeRadius" format="dimension" />
    <attr name="folderIconRadius" format="float" />

    <declare-styleable name="CustomFont">
        <attr name="android:textAppearance"/>
        <attr name="customFontType" format="enum">
            <enum name="title" value="0" />
            <enum name="preferenceTitle" value="1" />
            <enum name="button" value="2" />
            <enum name="categoryTitle" value="3" />
            <enum name="dialogTitle" value="4" />
            <enum name="settingsTab" value="5" />
            <enum name="text" value="6" />
            <enum name="settingsTileTitle" value="7" />
            <enum name="smartspaceText" value="8" />
            <enum name="baseIcon" value="9" />
            <enum name="workspaceIcon" value="10" />
            <enum name="allAppsIcon" value="11" />
            <enum name="folderIcon" value="12" />
            <enum name="actionView" value="13" />
            <enum name="deepShortcut" value="14" />
            <enum name="systemShortcut" value="15" />
            <enum name="taskOption" value="16" />
            <enum name="drawerTab" value="17" />
        </attr>
    </declare-styleable>
</resources>
